{
  "name": "contact-meeting-scheduler-electron",
  "version": "1.0.0",
  "description": "A local-first desktop application to manage contacts and schedule meetings, enhanced with AI-powered email invitation generation.",
  "main": "main.js",
  "scripts": {
    "build": "esbuild index.tsx --bundle --outfile=dist/bundle.js --platform=browser --jsx=automatic --define:process.env.NODE_ENV='\"production\"'",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "ISC",
  "dependencies": {
    "@electron/asar": "^4.0.1",
    "@google/genai": "^1.27.0",
    "@vitejs/plugin-react": "^5.1.0",
    "archiver-utils": "^5.0.2",
    "glob": "^13.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.1.2",
    "vite": "^7.1.12"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.27.2",
    "roarr": "^7.21.2",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.electron.contact-meeting-scheduler",
    "productName": "Contact & Meeting Scheduler",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
